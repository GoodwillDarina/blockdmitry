.counter {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin: 30px 0;
  font-size: 48px;
  font-weight: 600;
  letter-spacing: 0.5px;
  font-family: Neucha;
  color: #ce006b;
}
.counter-item {
  width: 100px;
  padding: 0 15px;
}
@media screen and (max-width: 490px) {
  .counter {
    font-size: 40px;
  }
}
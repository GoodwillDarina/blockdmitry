.token-cap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;

  .title {
    margin-bottom: 20px;
    text-transform: uppercase;
  }
}
.total-amount {
  .title {
    text-align: center;
    margin-bottom: 20px;
    text-transform: uppercase;
  }
  p.big-text {
    text-align: center;
  }
  p {
    margin-bottom: 15px;
  }
}
p.big-text {
  font-size: 48px;

  & + & {
    border-top: 1px solid #c9c9c9;
  }
}
.color-block {
  max-width: 300px;
  width: 100%;
  margin: 25px 0;
  padding: 10px 15px;
  font-size: 12px;
  text-transform: uppercase;
  color: #ffffff;
  background: #ce006b;

  div {
    display: flex;
    justify-content: space-between;
  }
}

.info {
  display: inline-block;
  text-align: center;
  size: 14px;
  border: 1px solid #fff;
  line-height: 14px;
  font-size: 10px;
  font-family: 'Open Sans', cursive;
  text-transform: lowercase;
  border-radius: 50%;
}


@media screen and (max-width: 800px) {
  .token-cap {
    align-items: center;
    justify-content: center;
    margin-bottom: 10px;
  }
}

@media screen and (max-width: 490px) {
  p.big-text {
    font-size: 40px;
  }
}
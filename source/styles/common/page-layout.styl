.page-wrap {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.page-content {
  flex: 1 0 auto;
}
.page-header {
  position: fixed;
  left: 0;
  z-index: 10;
  width: 100%;
  padding: 0;
  margin: 0;
  border-bottom: none;
  color: #ffffff;

  a {
    color: #ffffff;
  }
}
.page-main {
  padding: 125px 0 20px;
  transition: padding 0.25s linear;

  & > * {
    padding: 10px 0;
  }
  h2 {
    text-align: center;
    margin: 20px auto 30px;
    font-family: 'Open Sans', sans-serif;
    font-size: 34px;
  }

  p {
    margin-bottom: 0;
    font-size: 18px;
    line-height: 1.35;
  }

  .hl {
    color: #ce006b;
    text-shadow: none;
  }
}
.page-footer {
  flex: 0 0 auto;
}

@media screen and (max-width: 800px) {
  .page-main {
    //padding-top: 0;
  }
}
@media screen and (max-width: 500px) {
  .page-main {
    padding-top: 160px;
  }
}
@media screen and (max-width: 380px) {
  .page-main {
    padding-top: 200px;
  }
}
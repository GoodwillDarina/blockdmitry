.header {
  background: transparent;
  //box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.3), 0 1px 2px 0 rgba(0, 0, 0, 0.05);
}
.header-top {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 15px 15px 0;
  flex-wrap: wrap;
  background: linear-gradient( #1d5468 30%, #23586c 60%);
}
.header-bottom {
  display: flex;
  align-items: center;
  height: 50px;
  padding: 0 15px;
  background: transparent url('../images/followingTopBg.png') repeat-x 0 100%;
}

.header-logo {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;

  a {
    display: inline-block;
    margin: 0 10px;
    line-height: 32px;
    font-size: 32px;
    font-weight: normal;
    font-family: 'Neucha', sans-serif;
    color: #fff;

    &:hover {
      text-decoration: none;
      color: #f0bf00;
    }
  }
  &::before {
    content: '';
    display: inline-block;
    size: 50px 55px;
    background: transparent url('../images/logo.png') no-repeat center;
  }
  &::after {
    content: '';
    display: inline-block;
    size: 50px 55px;
    background: transparent url('../images/cheerLeader.png') no-repeat 0 center;
  }
}

.header-social {
  display: flex;
  justify-content: flex-start;
  padding: 0;
  margin: 0 10px;
  list-style: none;
}
.header-social__item {
  margin: 0 5px;
  font-size: 0;

  a {
    size: 32px;
    display: inline-block;
    border-radius: 4px;
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.05)

    &:hover {
      opacity: .75;
    }
  }
  a[href*='facebook'] {
    background-color: #33568f;
    background-image: url('http://w.sharethis.com/images/2017/facebook_32.png');
  }
  a[href*='twitter'] {
    background-color: #4ba2d6;
    background-image: url('http://w.sharethis.com/images/2017/twitter_32.png');
  }
  a[href*='google'] {
    background-color: #db4936;
    background-image: url('http://w.sharethis.com/images/2017/googleplus_32.png');
  }
}

.header-menu {
  flex: 1 0 auto;
}
.header-menu__list {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 0;
  margin: 0;
  list-style: none;
}
.header-menu__list-item {
  margin: 0 15px;

  a {
    display: block;
    padding: 10px 0 3px;
    border-bottom: 4px solid transparent;
    font-family: 'serif-header', 'Open Sans', cursive;
    font-weight: normal;
    color: #fff;
    background: transparent;
    touch-action: none;

    &:hover {
      background: transparent;
      text-decoration: none;
    }
    &.active {
      border-bottom-color: #f0bf00;
      text-decoration: none;
    }
  }
}
.header-menu-mobile {
  display: none;
}
.header-menu-close {
  position: absolute;
  top: 30px;
  right: 15px;
  display: inline-block;
  size: 26px;
  padding: 5px;
  line-height: 0;
}
.is-mobile {
  display: none;
}
@media screen and (max-width: 800px) {
  .is-scroll-hide {
    .header-description.is-mobile.hidden-scroll,
    .header-description.is-not-mobile.hidden-scroll {
      display: none;
    }
    .header-top {
      background: linear-gradient( #1d5468 30%, #1a5266 60%);
    }
    .header-bottom {
      position: relative;
      top: -32px;
      z-index: -1;
      transition: top 0.15s;
    }
  }
  .header-menu {
    width: 100%;

    &.is-not-mobile {
      display: none;
    }
  }
  .header-logo {
    justify-content: flex-start;
  }
  .header-menu__list {
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
  }
  .header-menu-mobile {
    display: block;
    flex: 1 0 auto;
    text-align: right;
  }
  .header-menu-btn {
    position: relative;
    display: inline-block;
    font-size: 0;
    width: 38px;
    height: 26px;
    padding: 6px 10px;
    background: #f0bf00;
    border-radius: 3px;
    cursor: pointer;

    a {
      position: absolute;
      display: block;
      width: 18px;
      height: 2px;
      border-radius: 4px;
      background-color: #fff;

      &::after, &::before {
        content: '';
        position: absolute;
        width: 18px;
        height: 2px;
        display: block;
        border-radius: 4px;
        background-color: #fff;
      }
      &::before {
        top: 6px;
      }
      &::after {
        top: 12px;
      }
        &:hover {
          text-decoration: none;
        }
    }
  }
}
@media screen and (max-width: 500px) {
  .is-scroll-hide {
    .header-bottom {
      position: relative;
      top: -6px;
      z-index: -1;
      transition: top 0.15s;
    }
    .header-logo {
      margin-bottom: 0;
    }
    .header-social {
      top: 4px;
    }
    .header-menu-mobile {
      position: relative;
      top: 7px;
    }
  }
  .is-not-mobile {
    display: none;
  }
  .is-mobile {
    display: block;
  }
  .header-logo {
    margin-bottom: 15px;

    &::after {
      display: none;
    }
  }
  .header-menu-mobile {
    order: 3;
  }
  .header-social {
    position: relative;
    top: -3px;
    order: 2;
  }
  .header-description {
    margin-bottom: 0;
    order: 4;
  }
  .header-menu {
    order: 5;
  }
  .header-menu__list {
    margin-top: 0;
  }
  .header-bottom {
    margin-top: -25px;
  }
}
@media screen and (max-width: 380px) {
  .is-scroll-hide {
    .header-bottom {
      position: relative;
      top: -6px;
      z-index: -1;
      transition: top 0.15s;
    }
    .header-logo {
      margin-bottom: 15px;
    }
    .header-social {
      margin-bottom: 0;
    }
    .header-social,
    .header-menu-mobile {
      position: relative;
      top: 0;
    }
  }

  .header-menu-mobile {
    order: 2;
  }
  .header-social {
    top: 0;
    width: 100%;
    margin: 0 0 10px;
    order: 3;
  }
}

@media (hover: hover) {
  .header-menu__list-item {
    a {
      &:hover, &.active {
        border-bottom-color: #f0bf00;
        text-decoration: none;
      }
    }
  }
  .header-menu-btn {
    &:hover {
      background: #43413e;
    }
  }
}
.header {
  background: transparent;
  //box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.3), 0 1px 2px 0 rgba(0, 0, 0, 0.05);
}
.header-top {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 15px 15px 0;
  flex-wrap: wrap;
  background: linear-gradient( #1d5468 30%, #2b5f71 60%);
}
.header-bottom {
  display: flex;
  align-items: center;
  height: 50px;
  padding: 0 15px;
  background: transparent url('../images/followingTopBg.png') repeat-x 0 100%;
}

.header-logo {
  display: flex;
  justify-content: space-between;
  align-items: center;

  a {
    display: inline-block;
    margin: 0 10px;
    line-height: 32px;
    font-size: 32px;
    font-weight: normal;
    font-family: 'Neucha', sans-serif;
    color: #fff;

    &:hover {
      text-decoration: none;
      color: #f0bf00;
    }
  }
  &::before {
    content: '';
    display: inline-block;
    size: 50px 55px;
    background: transparent url('../images/logo.png') no-repeat center;
  }
  &::after {
    content: '';
    display: inline-block;
    size: 50px 55px;
    background: transparent url('../images/cheerLeader.png') no-repeat 0 center;
  }
}

.header-social {
  display: flex;
  justify-content: flex-start;
  padding: 0;
  margin: 0 10px;
  list-style: none;
}
.header-social__item {
  margin: 0 5px;
  font-size: 0;

  a {
    size: 32px;
    display: inline-block;
    border-radius: 4px;
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.05)

    &:hover {
      opacity: .75;
    }
  }
  a[href*='facebook'] {
    background-color: #33568f;
    background-image: url('http://w.sharethis.com/images/2017/facebook_32.png');
  }
  a[href*='twitter'] {
    background-color: #4ba2d6;
    background-image: url('http://w.sharethis.com/images/2017/twitter_32.png');
  }
  a[href*='google'] {
    background-color: #db4936;
    background-image: url('http://w.sharethis.com/images/2017/googleplus_32.png');
  }
}

.header-menu {
  flex: 1 0 auto;
}
.header-menu__list {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 0;
  margin: 0;
  list-style: none;
}
.header-menu__list-item {
  margin-right: 15px;
  a {
    display: block;
    padding: 10px 15px;
    font-family: 'serif-header', 'Open Sans', cursive;
    font-weight: normal;
    color: #fff;
    border-radius: 3px;
    background: transparent;
    touch-action: none;

    &:hover {
      background: transparent;
      text-decoration: none;
    }
    &.active {
      background: #f0bf00;
      text-decoration: none;
    }
  }
}
.header-menu-mobile {
  display: none;
}
@media screen and (max-width: 800px) {
  .header-menu {
    display: none;
    width: 100%;

    &.is-show-mobile {
      display: block;
    }
  }
  .header-menu__list {
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
  }
  .header-menu-mobile {
    display: flex;
    justify-content: flex-end;
    flex: 1 0 auto;
  }
  .header-menu-btn {
    position: relative;
    display: inline-block;
    font-size: 0;
    width: 38px;
    height: 26px;
    padding: 6px 10px;
    background: #f0bf00;
    border-radius: 3px;
    cursor: pointer;

    &:hover {
      background: #43413e;
    }

    a {
      position: absolute;
      display: block;
      width: 18px;
      height: 2px;
      border-radius: 4px;
      background-color: #fff;

      &::after, &::before {
        content: '';
        position: absolute;
        width: 18px;
        height: 2px;
        display: block;
        border-radius: 4px;
        background-color: #fff;
      }
      &::before {
        top: 6px;
      }
      &::after {
        top: 12px;
      }
        &:hover {
          text-decoration: none;
        }
    }
  }
}
@media screen and (max-width: 490px) {
  .header-logo {
    justify-content: center;
    width: 100%;
    margin-bottom: 20px;
  }
  .header-menu__list {
    margin-top: 20px;
  }
}

@media (hover: hover) {
  .header-menu__list-item {
    a {
      &:hover, &.active {
        background: #f0bf00;
        text-decoration: none;
      }
    }
  }
}